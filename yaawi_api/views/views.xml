<odoo>
  <data>

    <!-- Vue Liste des Services -->
    <record id="view_service_list" model="ir.ui.view">
      <field name="name">app.service.list</field>
      <field name="model">app.service</field>
      <field name="arch" type="xml">
        <list string="Liste des Services">
          <field name="name"/>
          <field name="type"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <!-- Action associée aux vues -->
    <record id="action_service_list" model="ir.actions.act_window">
      <field name="name">Services</field>
      <field name="res_model">app.service</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Menu principal -->
    <menuitem name="Yaawi API" id="menu_yaawi_api_root" />

    <!-- Sous-menu pour les services -->
    <menuitem name="Services" id="menu_yaawi_services" parent="menu_yaawi_api_root" action="action_service_list"/>

    <!-- Vue Liste des Chauffeurs -->
    <record id="view_driver_list" model="ir.ui.view">
      <field name="name">res.partner.driver.list</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <list string="Chauffeurs">
          <field name="name"/>
          <field name="email"/>
          <field name="phone"/>
        </list>
      </field>
    </record>

    <!-- Action associée aux vues des chauffeurs -->
    <record id="action_driver_list" model="ir.actions.act_window">
      <field name="name">Chauffeurs</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('is_driver', '=', True)]</field>
    </record>

    <!-- Sous-menu pour les chauffeurs -->
    <menuitem name="Chauffeurs" id="menu_yaawi_drivers" parent="menu_yaawi_api_root" action="action_driver_list"/>

    <!-- Vue Liste des Passagers -->
    <record id="view_passenger_list" model="ir.ui.view">
      <field name="name">res.partner.passenger.list</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <list string="Passagers">
          <field name="name"/>
          <field name="email"/>
          <field name="phone"/>
        </list>
      </field>
    </record>

    <!-- Action associée aux vues des passagers -->
    <record id="action_passenger_list" model="ir.actions.act_window">
      <field name="name">Passagers</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">list,form</field>
      <field name="domain">[('is_driver', '=', False)]</field>
    </record>

    <!-- Sous-menu pour les passagers -->
    <menuitem name="Passagers" id="menu_yaawi_passengers" parent="menu_yaawi_api_root" action="action_passenger_list"/>

    <!-- Vue Liste des Modules -->
    <record id="view_module_list" model="ir.ui.view">
      <field name="name">app.module.list</field>
      <field name="model">app.module</field>
      <field name="arch" type="xml">
        <list string="Modules">
          <field name="name"/>
          <field name="description"/>
          <field name="state" widget="boolean_toggle"/>
        </list>
      </field>
    </record>

    <!-- Action associée aux vues des modules -->
    <record id="action_module_list" model="ir.actions.act_window">
      <field name="name">Modules</field>
      <field name="res_model">app.module</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Sous-menu pour les modules -->
    <menuitem name="Modules" id="menu_yaawi_modules" parent="menu_yaawi_api_root" action="action_module_list"/>

    <!-- Vue Liste des Activités Bus -->
    <record id="view_bus_activity_list" model="ir.ui.view">
      <field name="name">bus.activity.list</field>
      <field name="model">bus.activity</field>
      <field name="arch" type="xml">
        <list string="Activités">
          <field name="recipient_id"/>
          <field name="message"/>
          <field name="status"/>
          <field name="create_date"/>
          <field name="write_date"/>
        </list>
      </field>
    </record>

    <!-- Action associée aux vues des activités bus -->
    <record id="action_bus_activity_list" model="ir.actions.act_window">
      <field name="name">Activités</field>
      <field name="res_model">bus.activity</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Sous-menu pour les activités bus -->
    <menuitem name="Activités" id="menu_yaawi_bus_activities" parent="menu_yaawi_api_root" action="action_bus_activity_list"/>

  </data>
</odoo>
