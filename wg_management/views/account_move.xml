<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_inherit_contract" model="ir.ui.view">
        <field name="name">account.move.form.inherit.contract</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="create_contract" 
                       invisible="move_type not in ('out_invoice', 'out_refund') or state != 'draft'"
                       widget="boolean_toggle"/>
            </field>
        </field>
    </record>
</odoo>

