<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_contract" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.contract</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_contracts" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-file"
                        invisible="contract_count == 0">
                    <div class="o_stat_info">
                        <span class="o_stat_value"><field name="contract_count"/></span>
                        <span class="o_stat_text">Contrats</span>
                    </div>
                </button>
            </div>
            <xpath expr="//div[@class='o_address_format']" position="after">
                <field name="nni" placeholder="NNI..."/>
                <field name="type_contact"/>
            </xpath>
        </field>
    </record>
</odoo>

