<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wg_contract_list" model="ir.ui.view">
        <field name="name">wg.contract.list</field>
        <field name="model">wg.contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="monthly_price"/>
                <field name="total_price"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-danger="state == 'cancelled'"
                       decoration-warning="state == 'resilie'"
                       decoration-muted="state == 'expired'"
                       decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>
    
    <record id="view_wg_contract_form" model="ir.ui.view">
        <field name="name">wg.contract.form</field>
        <field name="model">wg.contract</field>
        <field name="arch" type="xml">
            <form string="Contrat Internet">
                <header>
                    <button name="action_activate" 
                            string="Activer" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_resiliate" 
                            string="Résilier" 
                            type="object" 
                            class="btn-warning"
                            invisible="state in ['cancelled', 'expired', 'resilie']"/>
                    <button name="action_cancel" 
                            string="Annuler" 
                            type="object" 
                            class="btn-danger"
                            invisible="state in ['cancelled', 'expired', 'resilie']"/>
                    <button name="action_print_contract" 
                            string="Imprimer le contrat" 
                            type="object" 
                            class="btn-secondary"
                            icon="fa-print"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_interventions" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-wrench">
                            <div class="o_stat_info">
                                <span class="o_stat_value"><field name="intervention_count"/></span>
                                <span class="o_stat_text">Interventions</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="invoice_id" readonly="1" invisible="not invoice_id"/>
                            <field name="sale_order_id" readonly="1" invisible="not sale_order_id"/>
                        </group>
                        <group>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="monthly_price" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="duration_months"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="total_price" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Factures" name="invoices">
                            <field name="invoice_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="amount_total"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes additionnelles sur le contrat..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="view_wg_contract_search" model="ir.ui.view">
        <field name="name">wg.contract.search</field>
        <field name="model">wg.contract</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <filter string="Actifs" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Expirés" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Résiliés" name="resilie" domain="[('state', '=', 'resilie')]"/>
                <filter string="Annulés" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                <filter string="Produit" name="group_product" context="{'group_by': 'product_id'}"/>
                <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>
    
    <record id="action_wg_contract" model="ir.actions.act_window">
        <field name="name">Contrats Internet</field>
        <field name="res_model">wg.contract</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_wg_contract_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez un contrat Internet
            </p>
            <p>
                Créez manuellement les contrats Internet pour vos clients.
            </p>
        </field>
    </record>
    
</odoo>

