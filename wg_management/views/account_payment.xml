<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wg_management_view_account_payment_list" model="ir.ui.view">
            <field name="name">wg_management.view.account.payment.list</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <list create="False" >
                    <field name="currency_id" options="{'no_create': True, 'no_open': True}" column_invisible="True" />
                    <field name="partner_id" string="Clients" />
                    <field name="sale_order_id" string="Demande" />
                    <field name="reference" />
                    <field name="amount" sum="Total"/>
                    <field name="date" />
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                    decoration-warning="state == 'in_process'" decoration-success="state == 'paid'" decoration-danger="state == 'canceled'"/>
                </list>
            </field>
        </record>

        <record id="wg_management_view_account_payment_form_update" model="ir.ui.view">
            <field name="name">wg_management.account.payment.form.update</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="reference" string="Numéro de la transaction" />
                    <field name="image" string="Numéro de la transaction" invisible="not show_partner_bank_account" required="not image"  widget='image' class="oe_avatar w-100" options="{'zoom': true, 'preview_image':'image_128'}" />
                </xpath>

                <xpath expr="//field[@name='memo']" position="after">
                    <field name="sale_order_id" string="Devis" />
                </xpath>

                <xpath expr="//group" position="after">
                    <field name="note" placeholder="Note ..." />
                </xpath>
            </field>
        </record>
        
        <record id="wg_management_action_account_payment" model="ir.actions.act_window">
            <field name="name">Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" ref="wg_management_view_account_payment_list"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new wg_subscription.
                </p>
            </field>
        </record>

    </data>
</odoo>

