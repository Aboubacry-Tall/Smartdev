<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_techniciens" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.techniciens</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Hide fields on the Sale Order form -->
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='validity_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <!-- Ajouter le champ is_technicien invisible -->
            <field name="partner_id" position="before">
                <field name="is_technicien" invisible="1"/>
            </field>
            
            <!-- Cacher les colonnes de prix pour les techniciens -->
            <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="attributes">
                <attribute name="column_invisible">parent.is_technicien</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//list//field[@name='discount']" position="attributes">
                <attribute name="column_invisible">parent.is_technicien</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//list//field[@name='price_subtotal'][1]" position="attributes">
                <attribute name="column_invisible">parent.is_technicien</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//list//field[@name='price_total'][1]" position="attributes">
                <attribute name="column_invisible">parent.is_technicien</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//list//field[@name='price_subtotal'][2]" position="attributes">
                <attribute name="column_invisible">parent.is_technicien</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//list//field[@name='price_total'][2]" position="attributes">
                <attribute name="column_invisible">parent.is_technicien</attribute>
            </xpath>
            
            <!-- Cacher les prix dans le formulaire popup -->
            <xpath expr="//field[@name='order_line']//form//field[@name='price_unit']" position="attributes">
                <attribute name="invisible">parent.is_technicien</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//form//field[@name='tax_ids']" position="attributes">
                <attribute name="invisible">parent.is_technicien</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//form//field[@name='discount']" position="attributes">
                <attribute name="invisible">parent.is_technicien</attribute>
            </xpath>
            
            <!-- Cacher le total en bas de page -->
            <xpath expr="//field[@name='tax_totals']" position="attributes">
                <attribute name="invisible">is_technicien</attribute>
            </xpath>
            
            <!-- Cacher le bouton de remise -->
            <xpath expr="//button[@name='action_open_discount_wizard']" position="attributes">
                <attribute name="invisible">is_technicien</attribute>
            </xpath>
            
            <field name="partner_id" position="after">
                <field name="longitude" required="True"/>
                <field name="latitude" required="True"/>
            </field>
            
            <field name="payment_term_id" position="after">
                <field name="technicien_ids" 
                       widget="many2many_tags"
                       options="{'no_create': True}"
                       placeholder="Sélectionner les techniciens..." 
                       invisible="1" />
                <field name="rejection_motif_id" 
                       placeholder="Sélectionner un motif de rejet..." />
            </field>
            
            <button name="action_confirm" position="attributes">
                <attribute name="groups">wg_management.group_technicien</attribute>
            </button>
        </field>
    </record>
</odoo>