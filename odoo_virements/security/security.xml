        </record>

        <!-- Règles pour les comptes bancaires -->
        <record id="rule_sogem_bank_account_base" model="ir.rule">
            <field name="name">Comptes bancaires: lecture seule</field>
            <field name="model_id" ref="model_sogem_bank_account"/>
