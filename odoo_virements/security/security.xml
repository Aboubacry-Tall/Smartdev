<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Catégorie pour les groupes SOGEM -->
        <record id="module_category_sogem" model="ir.module.category">
            <field name="name">SOGEM</field>
            <field name="description">Gestion SOGEM</field>
            <field name="sequence">10</field>
        </record>

        <!-- Sous-catégorie pour les virements -->
        <record id="module_category_sogem_virements" model="ir.module.category">
            <field name="name">Virements</field>
            <field name="description">Gestion des virements</field>
            <field name="sequence">1</field>
            <field name="parent_id" ref="module_category_sogem"/>
        </record>

        <!-- Privileges for SOGEM groups -->
        <record id="res_groups_privilege_sogem" model="res.groups.privilege">
            <field name="name">SOGEM</field>
            <field name="category_id" ref="module_category_sogem"/>
            <field name="sequence">10</field>
        </record>

        <record id="res_groups_privilege_sogem_virements" model="res.groups.privilege">
            <field name="name">Virements</field>
            <field name="category_id" ref="module_category_sogem_virements"/>
            <field name="sequence">1</field>
        </record>

        <!-- Groupe de base (lecture seule) -->
        <record id="group_sogem_base" model="res.groups">
            <field name="name">Utilisateur de base</field>
            <field name="privilege_id" ref="res_groups_privilege_sogem"/>
            <field name="comment">Accès en lecture seule à tous les modules SOGEM</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Groupe Responsable Virements -->
        <record id="group_sogem_virement_manager" model="res.groups">
            <field name="name">Responsable Virements</field>
            <field name="privilege_id" ref="res_groups_privilege_sogem_virements"/>
            <field name="implied_ids" eval="[(4, ref('group_sogem_base'))]"/>
            <field name="comment">Gestion complète des virements (sans suppression)</field>
        </record>

        <!-- Groupe Responsable Comptable -->
        <record id="group_sogem_accountant" model="res.groups">
            <field name="name">Responsable Comptable</field>
            <field name="privilege_id" ref="res_groups_privilege_sogem"/>
            <field name="implied_ids" eval="[(4, ref('group_sogem_base')), (4, ref('account.group_account_user'))]"/>
            <field name="comment">Accès comptable et validation des virements</field>
        </record>

        <!-- Groupe Administrateur -->
        <record id="group_sogem_admin" model="res.groups">
            <field name="name">Administrateur SOGEM</field>
            <field name="privilege_id" ref="res_groups_privilege_sogem"/>
            <field name="implied_ids" eval="[
                (4, ref('group_sogem_base')),
                (4, ref('group_sogem_virement_manager')),
                (4, ref('group_sogem_accountant'))
            ]"/>
            <field name="comment">Accès administrateur avec droits complets</field>
            <field name="user_ids" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Règles globales -->
        <record id="rule_sogem_global_base" model="ir.rule">
            <field name="name">Accès global en lecture seule</field>
            <field name="model_id" ref="model_sogem_transfer"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sogem_base'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règles pour les virements -->
        <record id="rule_sogem_transfer_base" model="ir.rule">
