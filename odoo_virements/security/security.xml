            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_sogem_transfer_line_manager" model="ir.rule">
            <field name="name">Lignes de virement: responsable</field>
            <field name="model_id" ref="model_sogem_transfer_line"/>
