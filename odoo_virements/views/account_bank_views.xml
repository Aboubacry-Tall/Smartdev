<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour les comptes bancaires -->
    <record id="view_sogem_bank_account_form" model="ir.ui.view">
        <field name="name">sogem.bank.account.form</field>
        <field name="model">sogem.bank.account</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_archive" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button"/>
                    </button>
                    <field name="internal_number" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="account_title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="beneficiary_id"/>
                            <field name="country_id"/>
                            <field name="currency_id" required="True"/>
                            <field name="is_company_account" invisible="1"/>
                        </group>
                        <group>
                            <field name="bank_id"/>
                            <field name="account_number"/>
                            <field name="bic"/>
                            <field name="iban"/>
                            <field name="partner_bank_id" readonly="1" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue liste pour les comptes bancaires -->
    <record id="view_sogem_bank_account_list" model="ir.ui.view">
        <field name="name">sogem.bank.account.list</field>
        <field name="model">sogem.bank.account</field>
        <field name="arch" type="xml">
            <list>
                <field name="account_title"/>
                <field name="beneficiary_id"/>
                <field name="bank_id"/>
                <field name="account_number"/>
                <field name="is_company_account" invisible="1" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vue recherche pour les comptes bancaires -->
    <record id="view_sogem_bank_account_search" model="ir.ui.view">
        <field name="name">sogem.bank.account.search</field>
        <field name="model">sogem.bank.account</field>
        <field name="arch" type="xml">
            <search>
                <field name="account_title"/>
                <field name="beneficiary_id"/>
                <field name="bank_id"/>
                <field name="account_number"/>
                <filter string="Comptes de l'entreprise" name="company_accounts" domain="[('is_company_account', '=', True)]"/>
                <filter string="Comptes des bénéficiaires" name="beneficiary_accounts" domain="[('is_company_account', '=', False)]"/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action pour les comptes bancaires -->
    <record id="action_sogem_bank_account" model="ir.actions.act_window">
        <field name="name">Comptes bancaires</field>
        <field name="res_model">sogem.bank.account</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo> 