<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_transfer_lines_wizard_form" model="ir.ui.view">
        <field name="name">import.transfer.lines.wizard.form</field>
        <field name="model">import.transfer.lines.wizard</field>
        <field name="arch" type="xml">
            <form string="Importer des lignes de virement">
                <group>
                    <field name="file" filename="filename" options="{'accepted_file_extensions': 'csv,xlsx'}"/>
                    <field name="filename"/>
                    <field name="transfer_id" invisible="0"/>

                </group>
                <footer>
                    <button name="action_import" type="object" string="Importer" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_transfer_lines_wizard" model="ir.actions.act_window">
        <field name="name">Importer des lignes de virement</field>
        <field name="res_model">import.transfer.lines.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_import_transfer_lines_wizard_form"/>
        <field name="context">{}</field>
    </record>
</odoo> 