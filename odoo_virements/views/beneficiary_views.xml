<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour les bénéficiaires -->
    <record id="view_sogem_beneficiary_form" model="ir.ui.view">
        <field name="name">sogem.beneficiary.form</field>
        <field name="model">sogem.beneficiary</field>
        <field name="arch" type="xml">
            <form string="Bénéficiaire">
                <header>
                    <button name="action_archive" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                    </button>
                    <button name="action_lock" type="object" class="oe_stat_button" icon="fa-lock" title="Verrouiller" invisible="locked == True"/>
                    <button name="action_unlock" type="object" class="oe_stat_button" icon="fa-unlock" title="Déverrouiller" invisible="locked == False"/>
                    <field name="internal_number" readonly="1"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du bénéficiaire..."/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informations générales">
                            <field name="matricule" readonly="1"/>
                            <field name="category"/>
                            <field name="category_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="country_id"/>
                            <field name="partner_id" readonly="1" options="{'no_create': True}"/>
                        </group>
                        <group string="Informations du compte">
                            <!-- <field name="account_number"/>
                            <field name="account_title"/> -->
                            <!-- <field name="iban"/>
                            <field name="bic"/> -->
                        </group>
                        <group string="Coordonnées">
                            <field name="address"/>
                            <!-- <field name="is_company_beneficiary"/> -->
                        </group>
                    </group>

                    <notebook>
                        <page string="Comptes Bancaires">
                            <field name="bank_account_ids" widget="one2many_list" placeholder="Comptes bancaires liés" options="{'no_create': True}"/>
                        </page>
                        <page string="Raison du verrouillage" invisible="locked == False">
                            <field name="locked_reason"/>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>


    <!-- Vue liste pour les bénéficiaires -->
    <record id="view_sogem_beneficiary_list" model="ir.ui.view">
        <field name="name">sogem.beneficiary.list</field>
        <field name="model">sogem.beneficiary</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="matricule"/>
                <field name="category"/>
                <field name="category_id"/>
                <field name="country_id"/>
                <!-- <field name="account_number"/>
                <field name="account_title"/> -->
                <field name="internal_number"/>
                <field name="locked" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vue recherche pour les bénéficiaires -->
    <record id="view_sogem_beneficiary_search" model="ir.ui.view">
        <field name="name">sogem.beneficiary.search</field>
        <field name="model">sogem.beneficiary</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="matricule"/>
                <field name="category_id"/>

                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Actif" name="active" domain="[('active', '=', True)]"/>
                <group>
                    <filter string="Catégorie" name="group_by_category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les bénéficiaires -->
    <record id="action_sogem_beneficiary" model="ir.actions.act_window">
        <field name="name">Bénéficiaires</field>
        <field name="res_model">sogem.beneficiary</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_is_company_beneficiary': False}</field>
        
    </record>

    <!-- Vue formulaire pour le wizard de verrouillage -->
    <record id="view_sogem_beneficiary_lock_wizard_form" model="ir.ui.view">
        <field name="name">sogem.beneficiary.lock.wizard.form</field>
        <field name="model">sogem.beneficiary.lock.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="beneficiary_id" invisible="1"/>
                    <field name="locked_reason"/>
                </group>
                bank_account_ids
                <footer>
                    <button name="action_lock" string="Verrouiller" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>