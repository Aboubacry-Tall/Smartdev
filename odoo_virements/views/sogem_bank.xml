<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_sogem_bank_list" model="ir.ui.view">
        <field name="name">sogem.bank.list</field>
        <field name="model">sogem.bank</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="country_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sogem_bank_form" model="ir.ui.view">
        <field name="name">sogem.bank.form</field>
        <field name="model">sogem.bank</field>
        <field name="arch" type="xml">
            <form string="Banque">
                <header>
                    <button name="action_archive" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                    </button>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="country_id"/>
                        <field name="reconciliation_manager"/>
                        <field name="account_manager"/>
                        <field name="contact"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sogem_bank" model="ir.actions.act_window">
        <field name="name">Banques</field>
        <field name="res_model">sogem.bank</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Créez votre première banque</p>
        </field>
    </record>

    <!-- Menu Item -->
</odoo>
