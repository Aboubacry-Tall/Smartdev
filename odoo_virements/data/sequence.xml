<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquences pour les comptes bancaires -->
        <record id="seq_sogem_bank_account" model="ir.sequence">
            <field name="name">Séquence Compte Bancaire SOGEM</field>
            <field name="code">sogem.bank.account</field>
            <field name="prefix">BANK/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquences pour les bénéficiaires -->
        <record id="seq_sogem_beneficiary" model="ir.sequence">
            <field name="name">Séquence Bénéficiaire</field>
            <field name="code">sogem.beneficiary</field>
            <field name="prefix">BEN/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquences pour le matricule des bénéficiaires -->
        <record id="seq_sogem_beneficiary_matricule" model="ir.sequence">
            <field name="name">Séquence Matricule Bénéficiaire</field>
            <field name="code">sogem.beneficiary.matricule</field>
            <field name="prefix"></field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquences pour les virements -->
        <record id="seq_sogem_transfer" model="ir.sequence">
            <field name="name">Séquence Virement</field>
            <field name="code">sogem.transfer</field>
            <field name="prefix">VIR/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo> 