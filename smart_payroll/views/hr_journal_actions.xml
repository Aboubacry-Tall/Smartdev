<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
        <record id="views_hr_salary_journal_list" model="ir.ui.view">
            <field name="name">hr.salary.journal.list</field>
            <field name="model">hr.salary.journal</field>
            <field name="arch" type="xml">
                <list string="Journaux de salaires" sample="1">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="action_hr_salary_journal" model="ir.actions.act_window">
            <field name="name">Journaux de salaires</field>
            <field name="res_model">hr.salary.journal</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="views_hr_salary_journal_list"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create a new salary journal
                </p>
            </field>
        </record>
    </data>
</odoo>