<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bank_salary_report" model="ir.actions.report">
        <field name="name">JOURNAL DE BANQUES</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">smart_payroll.bank_journal_report</field>
        <field name="report_file">smart_payroll.bank_journal_report</field>
        <field name="print_report_name">'JOURNAL - %s' % (object.name)</field>
        <field name="binding_model_id" ref="smart_payroll.model_hr_payslip"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_print_bank_journal" model="ir.actions.server">
        <field name="name">Journal de banques</field>
        <field name="model_id" ref="smart_payroll.model_hr_payslip"/>
        <field name="binding_model_id" ref="smart_payroll.model_hr_payslip" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code"> 
            action = record.print_bank_journal()
        </field>
    </record>

