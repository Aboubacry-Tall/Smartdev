<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="l10n_mr_bank_transfer.BankTransferVersionListController.Buttons" 
       t-inherit="web.ListView.Buttons" 
       t-inherit-mode="primary">
        <xpath expr="." position="inside">
            <button class="btn btn-primary" 
                    t-on-click="createBatch" 
                    t-att-disabled="model.root.selection.length &lt; 1 || state.disabled"> Sélectionner
            </button>
            <button class="btn btn-secondary" 
                    t-on-click="onBack"> Retour
            </button>
            <button class="btn btn-secondary" 
                    t-on-click="createEmptyBatchAndClose"
                    t-att-disabled="state.disabled"> Créer et fermer
            </button>
        </xpath>
    </t>
</templates>
