<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue Kanban des lots - Design simple et épuré -->
    <record id="view_bank_transfer_batch_kanban" model="ir.ui.view">
        <field name="name">bank.transfer.batch.kanban</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <kanban
                highlight_color="color"
                default_order="date desc, id desc"
                default_group_by="state"
                quick_create="0"
                records_draggable="0"
                js_class="bank_transfer_batch_kanban"
                group_create="false">
                <field name="color"/>
                <field name="currency_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="menu" class="d-flex flex-column ">
                        <button name="action_confirm" type="object" class="btn oe_highlight m-1" string="Confirmer" invisible="state != 'a_draft'"/>
                        <button name="action_c_done" type="object" class="btn btn-success m-1" string="Marquer comme traité" invisible="state != 'b_confirmed'"/>
                        <button name="action_a_draft" type="object" class="btn btn-secondary m-1" string="Remettre en brouillon" invisible="state == 'a_draft'"/>
                        <button name="unlink" type="object" class="btn text-danger m-1" string="Supprimer"/>
                    </t>
                    <t t-name="card" class="o_kanban_card cursor-pointer w-100 mb-2">
                        <div class="d-flex flex-column gap-2 p-3">
                            <!-- En-tête: Nom et Date -->
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="fs-3 fw-bold text-truncate">
                                        <field name="name"/>
                                    </div>
                                    <div class="text-muted small mt-1">
                                        <i class="fa fa-calendar me-1"/>
                                        <field name="date"/>
                                    </div>
                                </div>
                                <div class="ms-3">
                                    <field name="state" widget="badge" 
                                           decoration-warning="state == 'a_draft'" 
                                           decoration-info="state == 'b_confirmed'" 
                                           decoration-success="state == 'c_done'"/>
                                </div>
                            </div>
                            
                            <!-- Corps: Montant et Statistiques -->
                            <div class="d-flex justify-content-between align-items-end border-top pt-2">
                                <div>
                                    <div class="text-muted small">Montant total</div>
                                    <div class="fs-4 fw-bold text-primary">
                                        <field name="total_amount" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        <i class="fa fa-exchange me-1"/>
                                        <field name="transfer_count"/> virements
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue liste des lots -->
    <record id="view_bank_transfer_batch_tree" model="ir.ui.view">
        <field name="name">bank.transfer.batch.list</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <list string="Lots de virement bancaire" 
                  js_class="bank_transfer_batch_list"
                  multi_edit="1"
                  sample="1"
                  decoration-muted="state == 'c_done'"
                  decoration-info="state == 'b_confirmed'"
                  decoration-warning="state == 'a_draft'">
                <field name="name" string="Nom du lot"/>
                <field name="date"/>
                <field name="transfer_count" string="Virements"/>
                <field name="total_amount" sum="Total" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'c_done'" 
                       decoration-info="state == 'b_confirmed'" 
                       decoration-warning="state == 'a_draft'"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire détaillée des lots -->
    <record id="view_bank_transfer_batch_form" model="ir.ui.view">
        <field name="name">bank.transfer.batch.form</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <form string="Lot de virement bancaire">
                <header>
                    <button name="action_confirm" 
                            string="Confirmer" 
                            type="object" 
                            class="btn-primary" 
                            invisible="state != 'a_draft'"
                            icon="fa-check"/>
                    <button name="action_c_done" 
                            string="Marquer comme traité" 
                            type="object" 
                            class="btn-primary" 
                            invisible="state != 'b_confirmed'"
                            icon="fa-check-circle"/>
                    <button name="action_a_draft" 
                            string="Remettre en brouillon" 
                            type="object" 
                            class="btn-secondary" 
                            invisible="state == 'a_draft'"
                            icon="fa-undo"/>
                    <button name="action_open_transfers" 
                            string="Voir les virements" 
                            type="object" 
                            class="btn-secondary" 
                            icon="fa-list"/>
                    <button name="action_regenerate_all_lines" 
                            string="Régénérer toutes les répartitions" 
                            type="object" 
                            class="btn-secondary" 
                            icon="fa-refresh"
                            confirm="Cela va recréer toutes les lignes de répartition. Continuer ?"/>
                    <field name="state" widget="statusbar" statusbar_visible="a_draft,b_confirmed,c_done"/>
                </header>
                <sheet>
                    <!-- Titre -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nom du lot de virement"/>
                        </h1>
                    </div>
                    
                    <!-- Statistiques visuelles -->
                    <div class="row mt-3 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row">
                                        <label class="col-lg-3 o_light_label" for="transfer_count"/>
                                        <field name="transfer_count" readonly="1" class="text-start"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row">
                                        <label class="col-lg-3 o_light_label" for="total_amount"/>
                                        <field name="total_amount" widget="monetary" readonly="1" class="text-start"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Informations principales -->
                    <group>
                        <group string="Informations du lot">
                            <field name="date" widget="date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="État">
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    
                    <!-- Notebook -->
                    <notebook>
                        <page string="Virements" name="transfers">
                            <field name="transfer_ids">
                                <list editable="bottom" create="0" delete="1">
                                    <field name="employee_id" widget="many2one_avatar_employee" readonly="1"/>
                                    <field name="matricule" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="job_title" optional="hide" readonly="1"/>
                                    <field name="department_id" optional="hide" readonly="1"/>
                                    <field name="banques" readonly="1"/>
                                    <field name="code_banque" readonly="1"/>
                                    <field name="salaire" sum="Total" widget="monetary" readonly="1"/>
                                    <field name="salaire_corrige" sum="Total corrigé" widget="monetary"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Ajoutez des notes sur ce lot de virement..."/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <chatter />
            </form>
        </field>
    </record>

    <!-- Vue recherche des lots -->
    <record id="view_bank_transfer_batch_search" model="ir.ui.view">
        <field name="name">bank.transfer.batch.search</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <filter string="Brouillon" name="a_draft" domain="[('state', '=', 'a_draft')]"/>
                <filter string="Confirmé" name="b_confirmed" domain="[('state', '=', 'b_confirmed')]"/>
                <filter string="Traité" name="c_done" domain="[('state', '=', 'c_done')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today" domain="[('date', '=', context_today())]"/>
                <filter string="Ce mois" name="this_month" domain="[('date', '>=', (context_today().replace(day=1)))]"/>
                <separator/>
                <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
            </search>
        </field>
    </record>

    <!-- Vue formulaire détaillée des lots -->
    <record id="view_bank_transfer_batch_form_detailed" model="ir.ui.view">
        <field name="name">bank.transfer.batch.form.detailed</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <form string="Lot de virement bancaire">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" 
                            class="btn-primary" invisible="state != 'a_draft'"/>
                    <button name="action_c_done" string="Marquer comme traité" type="object" 
                            class="btn-primary" invisible="state != 'b_confirmed'"/>
                    <button name="action_a_draft" string="Remettre en brouillon" type="object" 
                            class="btn-secondary" invisible="state == 'a_draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="a_draft,b_confirmed,c_done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du lot"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="transfer_count"/>
                            <field name="total_amount" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Virements" name="transfers">
                            <field name="transfer_ids">
                                <list editable="bottom">
                                    <field name="matricule"/>
                                    <field name="name"/>
                                    <field name="banques"/>
                                    <field name="code_banque"/>
                                    <field name="salaire" sum="Total"/>
                                    <field name="salaire_corrige" sum="Total corrigé"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Ajoutez des notes ici..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action principale pour les lots (kanban par défaut) -->
    <!-- Vue Pivot -->
    <record id="view_bank_transfer_batch_pivot" model="ir.ui.view">
        <field name="name">bank.transfer.batch.pivot</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des lots">
                <field name="name" type="row"/>
                <field name="state" type="col"/>
                <field name="total_amount" type="measure"/>
                <field name="transfer_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Graph -->
    <record id="view_bank_transfer_batch_graph" model="ir.ui.view">
        <field name="name">bank.transfer.batch.graph</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <graph string="Analyse des lots" type="bar">
                <field name="date"/>
                <field name="total_amount" type="measure"/>
                <field name="transfer_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Calendar -->
    <record id="view_bank_transfer_batch_calendar" model="ir.ui.view">
        <field name="name">bank.transfer.batch.calendar</field>
        <field name="model">bank.transfer.batch</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des lots" 
                      date_start="date" 
                      mode="month"
                      color="state"
                      event_open_popup="1"
                      quick_create="0">
                <field name="name"/>
                <field name="total_amount" widget="monetary"/>
                <field name="transfer_count"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_transfer_batch" model="ir.actions.act_window">
        <field name="name">Lots de virement bancaire</field>
        <field name="res_model">bank.transfer.batch</field>
        <field name="view_mode">kanban,list,form,pivot,graph,calendar</field>
        <field name="search_view_id" ref="view_bank_transfer_batch_search"/>
        <field name="context">{'search_default_group_by_state': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun lot de virement bancaire.
            </p>
            <p>
                Un lot de virement regroupe les virements bancaires des employés pour une période donnée.<br/><br/>
                <a name="%(l10n_mr_bank_transfer.action_bank_transfer_batch_wizard_step1)d" 
                   type="action" 
                   class="btn btn-primary">
                    <i class="fa fa-plus"/> Créer un lot
                </a>
            </p>
        </field>
    </record>
</odoo>
