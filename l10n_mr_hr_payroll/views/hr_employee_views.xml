<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_form_l10n_mr_payroll" model="ir.ui.view">
        <field name="name">hr.employee.form.l10n_mr_payroll</field>
        <field name="model">hr.employee</field>
        <field name="priority">30</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <group name="payroll_group" position="inside">
                <field name="l10n_mr_matricule" />
                <field name="l10n_mr_cin_number" invisible="company_country_code != 'MR'"/>
                <field name="l10n_mr_cnss_number" />
                <field name="l10n_mr_cimr_number" invisible="company_country_code != 'MR'"/>
                <field name="l10n_mr_mut_number" invisible="company_country_code != 'MR'"/>
            </group>
        </field>
    </record>
</odoo>
