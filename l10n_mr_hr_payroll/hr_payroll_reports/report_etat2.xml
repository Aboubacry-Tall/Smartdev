<odoo>
    <data>
        <template id="report_hr_payslip_etat2">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h2 class="text-center mt-0">ETAT DE SALAIRE 2XIEME PARTIE</h2>
                            <br/>
                            <p>
                                <strong>Date du jour Heur:</strong>
                                <span t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/>
                            </p>
                            <p>
                                <strong>Période: </strong>
                                <strong>du </strong>
                                <span t-esc="doc.date_start"/>
                                <strong>au </strong>
                                <span t-esc="doc.date_end"/>
                            </p>
                            <div class="oe_structure"></div>
    
                                <table class="table table-bordered table-sm" style="border-collapse: collapse; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th style="text-align: left; border: 1px solid black;">Matricule</th>
                                            <th style="text-align: left; border: 1px solid black;">Gross</th>
                                            <th style="text-align: left; border: 1px solid black;">CNSS</th>
                                            <th style="text-align: left; border: 1px solid black;">CNAM</th>
                                            <th style="text-align: left; border: 1px solid black;">ITS</th>
                                            <th style="text-align: left; border: 1px solid black;">Prime panier</th>
                                            <th style="text-align: left; border: 1px solid black;">Lait</th>
                                            <th style="text-align: left; border: 1px solid black;">Acompte</th>
                                            <th style="text-align: left; border: 1px solid black;">Avance Annuelle</th>
                                            <th style="text-align: left; border: 1px solid black;">Avance Fêtes
                                            </th>
                                            <th style="text-align: left; border: 1px solid black;">Prêts en MRU</th>
                                            <th style="text-align: left; border: 1px solid black;">Net</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="doc.slip_ids" t-as="line">
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="line.employee_id.l10n_mr_matricule"/>
                                            </td>
    
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="line.line_ids.filtered(lambda l: l.code == 'GROSS').amount"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'CNSS').amount)"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'CNAM').amount)"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'ITS').amount)"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="line.line_ids.filtered(lambda l: l.code == 'PPANIER').amount"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="line.line_ids.filtered(lambda l: l.code == 'LAIT').amount"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="line.line_ids.filtered(lambda l: l.code == 'ACCT').amount"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'AVNCANL').amount)"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'AVNCFT').amount)"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'PRTMRU').amount)"/>
                                            </td>
                                            <td style="text-align: left; border: 1px solid black;">
                                                <span t-out="line.line_ids.filtered(lambda l: l.code == 'NET').amount"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span>
                                                    <t t-esc="len(doc.slip_ids)"/>
                                                </span>
                                            </td>
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="sum(line.line_ids.filtered(lambda l: l.code == 'GROSS').amount for line in doc.slip_ids )"/>
                                            </td>
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(abs(sum(line.line_ids.filtered(lambda l: l.code == 'CNSS').amount)) for line in doc.slip_ids )"/>
    
                                            </td> 
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(abs(sum(line.line_ids.filtered(lambda l: l.code == 'CNAM').amount)) for line in doc.slip_ids )"/>
    
                                            </td> 
    
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(abs(sum(line.line_ids.filtered(lambda l: l.code == 'ITS').amount)) for line in doc.slip_ids )"/>
                                            </td>
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(sum(line.line_ids.filtered(lambda l: l.code == 'PPANIER').amount) for line in doc.slip_ids )"/>
    
                                            </td> 
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(sum(line.line_ids.filtered(lambda l: l.code == 'LAIT').amount) for line in doc.slip_ids )"/>
    
                                            </td> 
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(sum(line.line_ids.filtered(lambda l: l.code == 'ACCT').amount) for line in doc.slip_ids )"/>
    
                                            </td> 
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(sum(line.line_ids.filtered(lambda l: l.code == 'AVNCANL').amount) for line in doc.slip_ids )"/>
    
                                            </td> 
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(sum(line.line_ids.filtered(lambda l: l.code == 'AVNCFT').amount) for line in doc.slip_ids )"/>
    
                                            </td> 
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(sum(line.line_ids.filtered(lambda l: l.code == 'PRTMRU').amount) for line in doc.slip_ids )"/>
    
                                            </td> 
                                            <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                                <span t-esc="round(sum(line.line_ids.filtered(lambda l: l.code == 'NET').amount) for line in doc.slip_ids )"/>
    
                                            </td> 
                                        </tr>
                                    </tbody>
                                </table>
                                <br/>
                                <div class="row h6">
                                    <div class="col-3 text-center">
                                        <strong>
                                            <span> Le Chef du personnel </span>
                                        </strong>
                                    </div>
                                    <div class="col-3 text-center">
                                        <strong>
                                            <span> Le Directeur Administratif </span>
                                        </strong>
                                    </div>
                                    <div class="col-3 text-center">
                                        <strong>
                                            <span> La Directrice financière </span>
                                        </strong>
                                    </div>
                                    <div class="col-3 text-center">
                                        <strong>
                                            <span> Le Directeur général </span>
                                        </strong>
                                    </div>
                                </div>
                        
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>