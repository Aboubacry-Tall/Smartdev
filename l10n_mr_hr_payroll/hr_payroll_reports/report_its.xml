<odoo>
  <data>
    <template id="report_hr_payslip_run">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <h2 class="text-center mt-0">ETAT ITS SOMOGAZ</h2>
                        <br/>
                        <p>
                            <strong>Date du jour Heur:</strong>
                            <span t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/>
                        </p>
                        <p>
                            <strong>Période: </strong>
                            <strong>du </strong>
                            <span t-esc="doc.date_start"/>
                            <strong>au </strong>
                            <span t-esc="doc.date_end"/>
                        </p>
                        <div class="oe_structure"></div>

                            <table class="table table-bordered table-sm" style="border-collapse: collapse; width: 100%;">
                                <thead>
                                    <tr>
                                        <th style="text-align: left; border: 1px solid black;">Matricule</th>
                                        <th style="text-align: left; border: 1px solid black;">Nom</th>
                                        <th style="text-align: left; border: 1px solid black;">Montant IMPO</th>
                                        <th style="text-align: left; border: 1px solid black;">Tx ITS</th>
                                        <th style="text-align: left; border: 1px solid black;">ITS</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.slip_ids" t-as="line">
                                        <td style="text-align: left; border: 1px solid black;">
                                            <span t-out="line.employee_id.l10n_mr_matricule"/>
                                        </td>
                                        <td style="text-align: left; border: 1px solid black;">
                                            <span t-out="line.employee_id.name"/>
                                        </td>
                                        <td style="text-align: left; border: 1px solid black;">
                                            <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'MT').amount)"/>
                                        </td>
                                        <td style="text-align: left; border: 1px solid black;">
                                            <span t-out="line.line_ids.filtered(lambda l: l.code == 'Taux_ITS').amount"/>
                                        </td>
                                        <td style="text-align: left; border: 1px solid black;">
                                            <span t-out="abs(line.line_ids.filtered(lambda l: l.code == 'ITS').amount)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                            <span>
                                                <t t-esc="len(doc.slip_ids)"/>
                                            </span>
                                        </td>
                                        <td style="text-align: left; font-weight: bold; border: 1px solid black;"></td>
                                        <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                            <span t-esc="round(abs(sum(line.line_ids.filtered(lambda l: l.code == 'MT').amount)) for line in doc.slip_ids )"/>
                                        </td>
                                        <td style="text-align: left; font-weight: bold; border: 1px solid black;"></td> 

                                        <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                            <span t-esc="round(abs(sum(line.line_ids.filtered(lambda l: l.code == 'ITS').amount)) for line in doc.slip_ids )"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <div class="row h6">
                                <div class="col-3 text-center">
                                    <strong>
                                        <span> Le Chef du personnel </span>
                                    </strong>
                                </div>
                                <div class="col-3 text-center">
                                    <strong>
                                        <span> Le Directeur Administratif </span>
                                    </strong>
                                </div>
                                <div class="col-3 text-center">
                                    <strong>
                                        <span> La Directrice financière </span>
                                    </strong>
                                </div>
                                <div class="col-3 text-center">
                                    <strong>
                                        <span> Le Directeur général </span>
                                    </strong>
                                </div>
                            </div>
                    
                    </div>
                </t>
            </t>
        </t>
    </template>
  </data>
</odoo>