<odoo>
    <data>
        <template id="report_payslip_cnam">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center mt-0">ETAT DES COTISATION DE LA CNAM</h2>
                        <br/>
                        <p>
                            <strong>Date du jour Heur:</strong>
                            <span t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/>
                        </p>
                        <p>

                            <strong>Période: </strong>
                            <strong>du </strong>
                            <span t-esc="employee_data[0]['payslips'][0].date_from"/>
                            <strong>au </strong>
                            <span t-esc="employee_data[0]['payslips'][0].date_to"/>

                        </p>
                        <div class="oe_structure"></div>

                        <table class="table table-bordered table-sm" style="border-collapse: collapse; width: 100%;">
                            <thead>
                                <tr>
                                    <th style="text-align: left; border: 1px solid black;">Matricule</th>
                                    <th style="text-align: left; border: 1px solid black;">NNI</th>
                                    <th style="text-align: left; border: 1px solid black;">Nom et PRENOM</th>
                                    <th style="text-align: left; border: 1px solid black;">Brut</th>
                                    <th style="text-align: left; border: 1px solid black;">Tx CNAM</th>
                                    <th style="text-align: left; border: 1px solid black;">Cot SAL</th>
                                    <th style="text-align: left; border: 1px solid black;">Cot PAT</th>
                                    <t t-set="show_allocg" t-value="any(payslip.line_ids.filtered(lambda l: l.code == 'ALLOCG').amount > 0 for emp_info in employee_data for payslip in emp_info['payslips'])"/>

                                    <th t-if="show_allocg" style="text-align: left; border: 1px solid black;">Brut CG</th>
                                    
                                    <th t-if="show_allocg" style="text-align: left; border: 1px solid black;">Cot SAL CG</th>
                                    <th t-if="show_allocg" style="text-align: left; border: 1px solid black;">Cot PAT CG</th>
                                </tr>
                            </thead>
                            <tbody >
                                <tr t-foreach="employee_data" t-as="emp_info">
                                    <td style="text-align: left; border: 1px solid black;">
                                        <span t-out="emp_info['employee'].l10n_mr_matricule"/>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <span t-out="emp_info['employee'].identification_id"/>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <span t-out="emp_info['employee'].name"/>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <span t-out="sum(payslip.line_ids.filtered(lambda l: l.code == 'GROSS').amount for payslip in emp_info['payslips'])"/>

                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <span t-out="sum(payslip.line_ids.filtered(lambda l: l.code == 'T_CNAM').amount for payslip in emp_info['payslips'])"/>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <span t-out="abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'CNAM').amount for payslip in emp_info['payslips']))"/>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <span t-out="sum(payslip.line_ids.filtered(lambda l: l.code == 'CHARGE_PAT_CNAM').amount for payslip in emp_info['payslips'])"/>
                                    </td>
                                    <!-- Start Conges -->
                                    <td t-if="show_allocg" style="text-align: left; border: 1px solid black;">
                                        <span t-out="sum(payslip.line_ids.filtered(lambda l: l.code == 'ALLOCG').amount for payslip in emp_info['payslips'])"/>

                                    </td>
                                    
                                    <td t-if="show_allocg" style="text-align: left; border: 1px solid black;">
                                        <span t-out="abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'CNAM_ALLOCG').amount for payslip in emp_info['payslips']))"/>
                                    </td>
                                    <td t-if="show_allocg" style="text-align: left; border: 1px solid black;">
                                        <span t-out="sum(payslip.line_ids.filtered(lambda l: l.code == 'CHARGE_PAT_CNAM_CG').amount for payslip in emp_info['payslips'])"/>
                                    </td>
                                    <!-- Start Conges -->

                                </tr>

                                <tr>
                                    <td style="text-align: left; font-weight: bold; border: 1px solid black;">
                                        <span>
                                            <t t-esc="len(employee_data)"/>

                                        </span>
                                    </td>
                                    <td style="text-align: left; font-weight: bold; border: 1px solid black;"></td>
                                    <td style="text-align: left; font-weight: bold; border: 1px solid black;"></td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <strong>
                                            <span t-out="round(abs(sum(abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'GROSS').amount for payslip in emp['payslips'])) for emp in employee_data)))"/>
                                        </strong>
                                    </td>

                                    <td style="text-align: left; font-weight: bold; border: 1px solid black;"></td>

                                    <td style="text-align: left; border: 1px solid black;">
                                        <strong>
                                            <span t-out="round(abs(sum(abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'CNAM').amount for payslip in emp['payslips'])) for emp in employee_data)))"/>
                                        </strong>
                                    </td>
                                    <td style="text-align: left; border: 1px solid black;">
                                        <strong>
                                            <span t-out="round(abs(sum(abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'CHARGE_PAT_CNAM').amount for payslip in emp['payslips'])) for emp in employee_data)))"/>
                                        </strong>
                                    </td>
                                    <td t-if="show_allocg" style="text-align: left; font-weight: bold; border: 1px solid black;">
                                        <span t-out="round(abs(sum(abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'ALLOCG').amount for payslip in emp['payslips'])) for emp in employee_data)))"/>

                                    </td>
                                    
                                    <td t-if="show_allocg" style="text-align: left; border: 1px solid black;">
                                        <strong>
                                            <span t-out="round(abs(sum(abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'CNAM_ALLOCG').amount for payslip in emp['payslips'])) for emp in employee_data)))"/>
                                        </strong>
                                    </td>
                                    <td t-if="show_allocg" style="text-align: left; border: 1px solid black;">
                                        <strong>
                                            <span t-out="round(abs(sum(abs(sum(payslip.line_ids.filtered(lambda l: l.code == 'CHARGE_PAT_CNAM_CG').amount for payslip in emp['payslips'])) for emp in employee_data)))"/>
                                        </strong>
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <div class="row h6">
                            <div class="col-3 text-center">
                                <strong>
                                    <span> Le Chef du personnel </span>
                                </strong>
                            </div>
                            <div class="col-3 text-center">
                                <strong>
                                    <span> Le Directeur Administratif </span>
                                </strong>
                            </div>
                            <div class="col-3 text-center">
                                <strong>
                                    <span> La Directrice financière </span>
                                </strong>
                            </div>
                            <div class="col-3 text-center">
                                <strong>
                                    <span> Le Directeur général </span>
                                </strong>
                            </div>
                        </div>
                    </div>
                </t>

            </t>
        </template>
    </data>
</odoo>
