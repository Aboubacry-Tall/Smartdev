<odoo>
    <record id="view_custom_salary_report_wizard" model="ir.ui.view">
        <field name="name">custom.salary.report.wizard.form</field>
        <field name="model">custom.salary.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Custom Salary Report">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="bank_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_custom_salary_report_wizard" model="ir.actions.act_window">
        <field name="name">Custom Salary Report</field>
        <field name="res_model">custom.salary.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
